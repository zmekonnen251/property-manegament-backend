//- Email template adapted from https://github.com/leemunroe/responsive-html-email-template
//- Converted from HTML using https://html2pug.now.sh/

doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title= subject

    include _style
  body
    table.body(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td
          td.container
            .content
              // START CENTERED WHITE CONTAINER
              table.main(role='presentation')

                // START MAIN AREA
                tbody
                  tr
                    td.wrapper
                      table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                          tr
                            td
                              // CONTENT
                              block content

              // START FOOTER

    p Best regards,
    | The Hotel Management Team
    .footer
      | &copy; #{new Date().getFullYear()} All rights reserved.
      | Powered by
      a(href=`${site_url}`, target='_blank') Hotel Management
      | .
      |
      | If you didn't book a reservation, please ignore this email.
      | This email was sent to
      a(href=`mailto:${email}`) #{email}
      | .
      //- END FOOTER
